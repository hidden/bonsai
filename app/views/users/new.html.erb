<div class="bonsai">
  <div class="holder_right">
    <div class="header">
      <div class="header_content">
        <h1><%= t("users.new_account")%></h1>
      </div>
      <div class="header_right">
      </div>
    </div>
    <div class="main_content">
    <% form_for :user, @user, :url => {:controller => "users", :action => "create"} do |f| %>  
    <%=error_messages_for 'user' %>
    <p>
      <%= f.label :username, t("users.input_username")%>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :name, t("users.name")%>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :password, t("users.input_password")%>
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, t("users.input_password_confirmation")%>
      <%= f.text_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit t("users.submit_registration")%>
    </p>
    <% end %>




    </div>
  </div>
</div>
<div class="footer">
  <div class="footer_left">
    &nbsp;
  </div>
  <div class="footer_right_light">
    &nbsp;
  </div>
</div>        