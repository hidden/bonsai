<div class="holder_right">
  <div class="header">
    <div class="header_content">
      <h1><%=h t(:seach_results) %></h1>
    </div>
    <div class="header_right">
    </div>
  </div>
  <div class="main_content">
    <% @search_results.each do |page| %>
        <h2><a href="<%=page_view_path(page.get_rel_path)%>" title="<%= page.title %>"><%= page.excerpts.title %></a></h2>
        <% for part in page.page_parts %>
            <% unless part.current_page_part_revision.was_deleted %>
                <% @body = part.current_page_part_revision.body %>
                <% if @body.length <= APP_CONFIG['fulltext_body_length'] %>
                    <%= without_markdown(@body) %>
                <% else %>
                    <%= @body[0,APP_CONFIG['fulltext_body_length']]+"..." %>
                <% end %>
                <% break %>
            <% end %>
        <% end %>
    <% end %>

    <% if @search_results.size > 0 %>
        <%= will_paginate @search_results, :prev_label => t("pagination.prev_label"),
                          :next_label => t("pagination.next_label") %>
    <% else %>
        <h2><%= t(:no_page_results_title) %></h2>
        <p><%= t(:no_page_results_body) %></p>
    <% end %>
  </div>
</div>


<div class="footer">
  <div class="footer_left">
  </div>
  <div class="footer_right_light">
  </div>
</div>