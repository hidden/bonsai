<% @user_can_view=0 %>
<% @search_results.each do |page| %>
    <% if @current_user.can_view_page? page %>
        <% @user_can_view+=1 %>
        <h2><%=link_to h(page.title), page_view_path(page.get_rel_path) %></h2>
        <% for part in page.page_parts %>
            <% unless part.current_page_part_revision.was_deleted %>
                <% @body = part.current_page_part_revision.body %>
                    <% if @body.length <= APP_CONFIG['fulltext_body_length'] %>
                        <%= markdown(part.current_page_part_revision.body) %>
                    <% else %>
                      <%= @body[0,APP_CONFIG['fulltext_body_length']]+"..." %>
                    <% end %>
                <% break %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
<% if @user_can_view > 0 %>    
    <%= will_paginate @search_results %>
<% else %>
   <h2><%= t(:no_page_results_title) %></h2>
   <p><%= t(:no_page_results_body) %></p>
<% end %>
