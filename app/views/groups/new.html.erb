<div class="holder_right">
  <div class="header">
    <div class="header_content">
      <h1><%= t(:new_group) %></h1>
    </div>
    <div class="header_right">
    </div>
  </div>
  <div class="main_content">
    <% form_for(@group) do |f| %>
        <div>
          <%= f.error_messages %>

          <p>
            <%= f.label t(:name) %><br />
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.submit t(:btn_create_group), :class=> "small_button" %>
          </p>
        </div>
    <% end %>

    <%= link_to t(:back), groups_path %>

  </div>
</div>
<div class="footer">
  <div class="footer_left">
    &nbsp;
  </div>
  <div class="footer_right_light">
    &nbsp;
  </div>
</div>