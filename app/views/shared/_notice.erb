<% unless flash.empty? %>
    <% if flash.keys.first.to_s == "error" %>
        <div id="errorflash"><%=h flash.values.first %>
          <div onclick="javascript: removeNotice(this)">
            <%= icon_tag('cancel.png', :alt => t(:close))%>
          </div>
        </div>
    <% else %>
        <p id="flash" class="<%= flash.keys.first %>"><%=h flash.values.first %></p>
    <% end %>
<% end %>
