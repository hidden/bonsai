<span id="favorite">
<% unless @current_user.favorite_pages.include?(@page) %>
  <%= link_to_remote (icon_tag('star-out.png', :title => t(:add_to_favorites), :alt => ''),
        { :url => { :action => "toggle_favorite"} },
        :href => url_for(:action => "toggle_favorite"))
  %>
<% else %>
<%= link_to_remote (icon_tag('star.png', :title => t(:add_to_favorites), :alt => ''),
        { :url => { :action => "toggle_favorite"} },
        :href => url_for(:action => "toggle_favorite"))

%>
<% end %>
</span>